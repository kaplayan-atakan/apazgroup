<?xml version="1.0" encoding="utf-8"?>
<configuration>
  <system.webServer>
    <handlers>
      <add name="iisnode" path="server.js" verb="*" modules="iisnode" />
    </handlers>
    <rewrite>
      <rules>
        <!-- Hassas dosyalara erişimi engelle -->
        <rule name="BlockSensitiveFiles" stopProcessing="true">
          <match url="^(package\.json|package-lock\.json|\.env.*|tsconfig\.json|next\.config\..*|web\.config|.*\.md|\.git.*|\.vscode.*)$" />
          <action type="CustomResponse" statusCode="403" statusReason="Forbidden" statusDescription="Access Denied" />
        </rule>
        <rule name="NextJS">
          <match url="(.*)" />
          <conditions>
            <add input="{REQUEST_FILENAME}" matchType="IsFile" negate="true" />
          </conditions>
          <action type="Rewrite" url="server.js" />
        </rule>
        <!-- 301 redirectler için özel kurallar (next.config.js'deki redirects karşılığı) -->
        <rule name="LegacyURLsToNewFormat" stopProcessing="true">
          <match url="^([^_]+)_([^_]+)$" />
          <action type="Redirect" url="/tr/{R:1}-{R:2}" redirectType="Permanent" />
        </rule>
      </rules>
    </rewrite>
    <httpErrors existingResponse="PassThrough" />
    <iisnode node_env="production" watchedFiles="web.config;*.js" />
  </system.webServer>
</configuration>